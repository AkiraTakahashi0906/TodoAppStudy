<!DOCTYPE html>
<!-- MVC5 レイアウトページ　Razer Viewエンジン-->
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container">
        <!--Request.IsAuthenticated ログインしていればTRUEが返る-->
        @if (Request.IsAuthenticated)
        {
            //SignOut アクションメソッドへのリンクを作る　第三引数にコントローラを渡すLogin
            @Html.ActionLink("ログアウト", "SignOut", new { Controller = "Login" })

            if (User.IsInRole("Administrators"))
            {
                <span>|</span>
                @Html.ActionLink("ユーザー管理", "Index", new { Controller = "Users" })
            }

        }
    </div>
    <!--container 左右に適切な余白設定してくれる-->
    <div class="container">
        @RenderBody()
    </div>
</body>
</html>
